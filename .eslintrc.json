{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    // Désactiver les règles qui causent des problèmes
    "react/no-unescaped-entities": "off",
    "react/display-name": "off",
    "react-hooks/exhaustive-deps": "warn",
    "no-unused-vars": "warn",
    "no-undef": "warn",
    "no-mixed-spaces-and-tabs": "warn",
    "no-empty-pattern": "warn",
    "no-redeclare": "warn"
  },
  "globals": {
    "React": "writable"
  }
}